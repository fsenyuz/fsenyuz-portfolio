---
// English experience page.  Lists all professional experiences.
---
---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TimelineItem from '../../components/TimelineItem.astro';
import { experiences } from '../../data/experiences.js';

---
<BaseLayout lang="en" title="Experience — Furkan Şenyüz" description="Professional experience of engineer Furkan Şenyüz in project and contract management." canonical="https://fsenyuz.com/en/experience" alternate="https://fsenyuz.com/tr/deneyim" alternateLang="tr">
  <section class="py-2xl px-m bg-light dark:bg-dark max-w-5xl mx-auto">
    <h1 class="text-h2 font-bold text-primary mb-l">Experience</h1>
    <p class="text-body mb-l">Below is a summary of my key professional experiences in project and contract management.</p>
    <div class="border-l-2 border-accent pl-m">
      {experiences.map(item => (
        <TimelineItem
          start={item.start}
          end={item.end}
          company={item.company}
          role={item.role}
          project={item.project}
          description={item.en}
        />
      ))}
    </div>
  </section>
</BaseLayout>