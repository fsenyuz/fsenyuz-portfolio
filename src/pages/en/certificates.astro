---
// English certificates page.  Lists all certifications and trainings.
---
---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { certificates } from '../../data/certificates.js';

---
<BaseLayout lang="en" title="Certificates — Furkan Şenyüz" description="Professional certifications and training completed by Furkan Şenyüz." canonical="https://fsenyuz.com/en/certificates" alternate="https://fsenyuz.com/tr/sertifikalar" alternateLang="tr">
  <section class="py-2xl px-m bg-light dark:bg-dark max-w-4xl mx-auto">
    <h1 class="text-h2 font-bold text-primary mb-l">Certificates</h1>
    <ul class="space-y-m">
      {certificates.map(cert => (
        <li class="border p-m rounded-lg bg-light dark:bg-dark border-gray-200 dark:border-gray-700">
          <p class="text-body"><strong>{cert.year} — {cert.en.name}</strong> ({cert.en.provider})</p>
          <p class="text-body text-gray-700 dark:text-gray-300">{cert.en.note}</p>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>