---
// Hero section component.  Shows a prominent headline, subheadline
// and two call‑to‑action buttons.  A background image can be passed
// via the `bg` prop (path relative to the public directory).
---
---
export interface Props {
  headline: string;
  subheadline: string;
  ctaPrimary: { label: string; href: string; };
  ctaSecondary: { label: string; href: string; };
  bg?: string;
}

const { headline, subheadline, ctaPrimary, ctaSecondary, bg } = Astro.props;

---
<section class="relative overflow-hidden bg-primary-dark text-light py-2xl">
  {bg && (
    <img src={bg} alt="hero background" class="absolute inset-0 object-cover w-full h-full opacity-30" loading="lazy" />
  )}
  <div class="relative container mx-auto px-m flex flex-col items-start gap-l max-w-4xl">
    <h1 class="text-h1 font-bold mb-m">{headline}</h1>
    <p class="text-body mb-xl max-w-2xl">{subheadline}</p>
    <div class="flex gap-s">
      <a href={ctaPrimary.href} class="bg-accent text-light py-s px-l rounded hover:bg-accent-light transition-colors">{ctaPrimary.label}</a>
      <a href={ctaSecondary.href} class="bg-transparent border border-accent text-accent py-s px-l rounded hover:bg-accent hover:text-light transition-colors">{ctaSecondary.label}</a>
    </div>
  </div>
</section>